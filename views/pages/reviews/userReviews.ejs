<section>
    <% showReviews(game.id) %>
</section>


<% function showReviews(id){ %>
    <% reviewList.forEach(review => { %>
        <div id = "review_juego">
            <% showRev(review) %>
        </div>
<% })} %>

<% function showRev(rev){ %>
    <p> <%= rev.username%></p>
    <p> <%= rev.date %></p>
    <p> <%= rev.description%></p>
    <p> <%= rev.rating%></p>
    <p></p>
    <p></p>
    <% if(session.esAdmin) {%>
        <% console.log("REVIEW ID: " + rev.reviewId)%>
        <form action = "/games/deleteReview/<%= rev.reviewId%>" method = "POST">
            <input type = "hidden" name = "gameId" value = "<%= game.id %>">
            <button type ="submit">Eliminar review</button>
        </form>
    <% }%>
<% } %>

<h1>Añadir juego a Base de Datos</h1>

<form action="/games/addGame" method="POST">
    <fieldset>
        <% if (locals.error) { %>
            <p><strong><%= locals.error %></strong></p>
        <% } %>
        <% if (locals.exito) { %>
            <p><strong><%= locals.exito %></strong></p>
        <% } %>
        <legend> Añadir Juego</legend>
        <label>Titulo:</label> <input type="text" name="title"/><%- helpers.error(errores, 'title') %>
        <p></p>
        <label>Descripcion:</label> <input type="text" name="description" style="width: 80%;height: 40px;"><%- helpers.error(errores, 'description') %>
        <p></p>
        <label>Nota:</label> <input type="text" name="rating"/><%- helpers.error(errores, 'rating') %>
        <p></p>
        <label>Número Favoritos:</label> <input type="text" name="favNumber"/><%- helpers.error(errores, 'favNumber') %>
        <p></p>
        <label>Id compañía:</label> <input type="text" name="company_id"/><%- helpers.error(errores, 'company_id') %>
        <p></p>
        <button type="submit">Enviar</button>
    </fieldset>
</form>